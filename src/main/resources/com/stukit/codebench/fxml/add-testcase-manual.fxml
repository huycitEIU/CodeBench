<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.stukit.codebench.ui.controller.AddTestcaseManualController">
    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
    </padding>
    <children>
        <Label fx:id="lblTitle" text="Chi tiết Testcase">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>

        <Label text="Input (Đầu vào):">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Label>
        <TextArea fx:id="txtInput" editable="false" prefHeight="100.0" style="-fx-font-family: 'Consolas';" wrapText="true" />

        <HBox spacing="10.0" VBox.vgrow="ALWAYS">
            <children>
                <VBox HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="Expected Output (Đáp án):" textFill="#2ecc71">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Label>
                        <TextArea fx:id="txtExpected" editable="false" prefHeight="200.0" style="-fx-font-family: 'Consolas'; -fx-control-inner-background: #f0fff4;" wrapText="true" VBox.vgrow="ALWAYS" />
                    </children>
                </VBox>

                <VBox HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="Your Output (Thực tế):" textFill="#e74c3c">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Label>
                        <TextArea fx:id="txtActual" editable="false" prefHeight="200.0" style="-fx-font-family: 'Consolas'; -fx-control-inner-background: #fff5f5;" wrapText="true" VBox.vgrow="ALWAYS" />
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</VBox>