<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="300.0" prefWidth="500.0" spacing="20.0"
      style="-fx-background-color: #2b2b2b; -fx-border-color: #444; -fx-border-width: 1;"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.stukit.codebench.ui.controller.SplashController">

    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>

    <children>
        <Label text="CodeBench" textFill="WHITE">
            <font>
                <Font name="System Bold" size="36.0" />
            </font>
        </Label>

        <Label text="Automated Grading System" textFill="#888888">
            <font>
                <Font size="14.0" />
            </font>
        </Label>

        <Label fx:id="lblLoading" text="Đang khởi tạo..." textFill="#bbbbbb">
            <font>
                <Font name="System Italic" size="12.0" />
            </font>
        </Label>
    </children>
</VBox>